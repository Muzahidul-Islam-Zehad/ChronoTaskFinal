<Window x:Class="ChronoTask.AddTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ChronoTask"


    Title="Add Task" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <TextBox x:Name="TaskNameTextBox" Margin="10" Text="Task Name" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="TaskDescriptionTextBox" Margin="10" Text="Task Description" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBlock Text="Start Time:" Margin="10"/>
            <DatePicker x:Name="StartTimePicker" Margin="10"/>
            
            <local:TimePicker x:Name="StartTimeTimePicker" Margin="10"/>
            <TextBlock Text="End Time:" Margin="10"/>
            <DatePicker x:Name="EndTimePicker" Margin="10"/>
            <local:TimePicker x:Name="EndTimeTimePicker" Margin="10"/>
            <Button Content="Save" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
