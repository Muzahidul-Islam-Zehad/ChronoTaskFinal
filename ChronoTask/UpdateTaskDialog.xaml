<Window x:Class="ChronoTask.UpdateTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ChronoTask"
        Title="Update Task" Height="350" Width="400">
    <Grid>
        <StackPanel>
            <TextBox x:Name="TaskNameTextBox" Margin="10" />
            <TextBox x:Name="TaskDescriptionTextBox" Margin="10" />
            <DatePicker x:Name="TaskStartDatePicker" Margin="10" />
            <local:TimePicker x:Name="TaskStartTimePicker" Margin="10" />
            <!-- Add TimePicker here -->
            <DatePicker x:Name="TaskEndDatePicker" Margin="10" />
            <local:TimePicker x:Name="TaskEndTimePicker" Margin="10" />
            <!-- Add TimePicker here -->
            <Button Content="Save" Click="SaveButton_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
